doctype html
html
	block head
	head
		title #{title}
		meta(name="viewport" content="width=device-width, initial-scale=1")
		link(rel="shortcut icon" href="/jqm/favicon.ico")
		link(href="https://fonts.googleapis.com/css?family=Roboto:100,200,400" rel="stylesheet")
		link(rel="stylesheet" href="/jqm/dist/css/jquery.mobile-1.4.5.min.css")
		script(src="/jqm/dist/js/jquery-1.11.1.min.js")
		script(src="/jqm/dist/js/jquery.mobile-1.4.5.min.js")
	body
		// multipage popup
		div.ui-corner-all(data-role="popup" id="inner-shock")
			form
				div(style="padding:10px 20px;")
					h3 Бесплатное пробное занятие
					label.ui-hidden-accessible(for="inner-name") Ваше имя:
					input(type="text" name="user" id="inner-name" value="" placeholder="Ваше имя")
					label.ui-hidden-accessible(for="inner-phone") Ваш номер телефона:
					input(type="text" 
					name="phone" 
					id="inner-phone" 
					value="" 
					placeholder="+375 29 xxx xx xx")
					button(type="submit" class="ui-btn ui-corner-all ui-shadow ui-btn-b ui-btn-icon-left ui-icon-check") Отправить
	block content
	block foot	